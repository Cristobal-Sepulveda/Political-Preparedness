<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="electionDB"
            type="com.example.android.politicalpreparedness.data.database.ElectionDatabaseKt" />

<!--        <variable
            name="clickListener"
            type="com.example.android.politicalpreparedness.util.ElectionListAdapter." />-->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--android:onClick="@{() -> clickListener.onClick(sleep)}"-->

        <ImageView
            android:id="@+id/representativePhoto_imageView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/representativeName_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/representativePhoto_imageView"
            app:layout_constraintStart_toStartOf="@+id/representativePhoto_imageView"
            app:layout_constraintTop_toBottomOf="@+id/representativePhoto_imageView"/>
            <!--app:sleepQualityString="@{sleep}"-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>